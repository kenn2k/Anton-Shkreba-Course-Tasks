{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-jsx",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/*"],
  "exclude": ["tests/*"]
}
